<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable name="quote"
            type="com.celsius.customstocks.datamodels.Quote"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/simbol_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{quote.companyName}"
            android:textColor="@color/symbol_name_color"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/symbol_row_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simbol_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:textColor="@color/symbol_tyoe_color">

            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{quote.symbol}"
                android:textColor="@color/symbol_tyoe_color"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:background="@color/search_field_stroke_color" />

            <TextView
                android:id="@+id/market_primary_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{quote.primaryExchange}"
                android:textColor="@color/symbol_tyoe_color"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:background="@color/search_field_stroke_color" />


            <TextView
                android:id="@+id/market_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{quote.latestUpdate}"
                android:textColor="@color/symbol_tyoe_color"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/min_max_value_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/symbol_row_data"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/low_line"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight=".30"
                android:gravity="center_vertical"
                android:background="@color/red_chard_line">
            </View>

            <View
                android:id="@+id/high_line"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight=".70"
                android:gravity="center_vertical"
                android:background="@color/green_chart_line">
            </View>

        </LinearLayout>


        <View
            android:id="@+id/buttom_seperator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/search_field_stroke_color"/>


    </RelativeLayout>

</layout>